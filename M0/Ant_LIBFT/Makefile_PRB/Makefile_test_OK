# ************************** #
#          MAKEFILE LIBFT    #
# ************************** #

NAME    = libft.a
SO_NAME = libft.so

# ------------------------------
# Fuentes de la libft (parte obligatoria)
SRCS = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_tolower.c ft_toupper.c \
	ft_strlen.c ft_strchr.c ft_strrchr.c ft_strlcpy.c ft_strnstr.c ft_strlcat.c ft_strncmp.c \
	ft_memset.c ft_bzero.c ft_memmove.c ft_memchr.c ft_memcmp.c ft_memcpy.c\
	ft_atoi.c ft_itoa.c ft_putnbr_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putchar_fd.c \
	ft_strjoin.c ft_substr.c ft_calloc.c ft_strdup.c ft_strtrim.c ft_split.c ft_striteri.c ft_strmapi.c

# Si tienes funciones bonus, a√±√°delas aqu√≠. Si no, d√©jalo vac√≠o o comenta.
BONUS_SRCS = # ft_lstnew.c ft_lstadd_front.c ... (a√±ade tus bonus aqu√≠)

# ------------------------------
OBJS = $(SRCS:.c=.o)
BONUS_OBJS = $(BONUS_SRCS:.c=.o)

CC      = cc
CFLAGS  = -Wall -Wextra -Werror
RM      = rm -f

# ------------------------------
all: $(NAME)

$(NAME): $(OBJS)
	@echo "Compilando libft..."
	ar rcs $(NAME) $(OBJS)
	@echo "‚úÖ libft.a creado correctamente."

bonus: $(OBJS) $(BONUS_OBJS)
	@echo "Compilando bonus..."
	ar rcs $(NAME) $(OBJS) $(BONUS_OBJS)
	@echo "‚úÖ libft.a con bonus creado correctamente."

so: $(OBJS)
	@echo "Compilando librer√≠a compartida..."
	$(CC) -nostartfiles -fPIC -shared -o $(SO_NAME) $(OBJS)
	@echo "‚úÖ libft.so creado correctamente."

clean:
	$(RM) $(OBJS) $(BONUS_OBJS)
	@echo "üßπ Objetos eliminados."

fclean: clean
	$(RM) $(NAME) $(SO_NAME)
	@echo "üóëÔ∏è  Librer√≠as eliminadas."

re: fclean all

.PHONY: all clean fclean re bonus so
