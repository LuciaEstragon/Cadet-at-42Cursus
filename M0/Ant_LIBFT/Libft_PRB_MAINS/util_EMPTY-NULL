#include <stdio.h>
#include <string.h>

typedef enum {
    STRING_NULL,
    STRING_EMPTY, 
    STRING_VALID
} StringStatus;

StringStatus verificarString(const char* str) {
    if (str == NULL) {
        return STRING_NULL;
    }
    if (str[0] == '\0') {
        return STRING_EMPTY;
    }
    return STRING_VALID;
}

void manejarString(const char* str) {
    switch (verificarString(str)) {
        case STRING_NULL:
            printf("Error: Puntero NULL\n");
            break;
        case STRING_EMPTY:
            printf("Advertencia: String vacío\n");
            break;
        case STRING_VALID:
            printf("Procesando: %s\n", str);
            break;
    }
}


NULL: Es un puntero nulo, definido como ((void*)0)

\0: Es el carácter terminador de string (valor ASCII 0)

0: Es el entero cero


    // Diferentes casos a testear
    const char* nullPtr = NULL;
    const char* emptyStr = "";
    const char* normalStr = "Hola";
    const char* zeroStr = "0";
    
    analizarString(nullPtr);    // NULL pointer
    analizarString(emptyStr);   // String vacío
    analizarString(normalStr);  // String válido
    analizarString(zeroStr);    // String con "0"
    
    
// Estas dos condiciones son IDÉNTICAS: verifican si existe y no es nulo
if (dest == NULL || src == NULL)
if (!dest || !src)
// Esta verifica el final de linea
if (dest[i] == '\0' || src[i] == '\0')




Asignación	¿Puntero válido?	¿Se puede acceder?	Contenido
src = ""	SÍ			SÍ			'\0'
src = NULL	NO			NO (crash)		-
src = 0		NO			NO (crash)		-
src = '\0'	ERROR			-			-
src = "\0"	SÍ			SI			['\0', '\0']		strlne(scr) = 0


1. src = "" - String vacío
c
char *src = "";  // Puntero a string vacío
src apunta a memoria válida que contiene '\0'

src != NULL

src[0] == '\0'

strlen(src) == 0

2. src = NULL - Puntero nulo
c
char *src = NULL;  // Puntero nulo
src NO apunta a ninguna memoria

src == NULL

src[0] → SEGMENTATION FAULT (acceso ilegal)

3. src = "\0" - String con un carácter nulo
c
char *src = "\0";
src apunta a memoria válida

src != NULL

El string contiene exactamente un carácter: '\0'

strlen(src) == 0 (pero ocupa 2 bytes en memoria)

4. src = 0 - Equivalente a NULL
c
char *src = 0;  // Igual que NULL
src == NULL

Es lo mismo que src = NULL






